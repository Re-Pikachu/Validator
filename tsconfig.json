{ 
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./", //src
      "declaration": true,
      "sourceMap": true,
      "jsx": "react",
    },
    "include": ["*.ts", "*.tsx", "**/*.ts", "**/*.tsx", "components/Home.jsx"],
    "exclude": ["node_modules", "dist"]     //we do need the exclude 
  }